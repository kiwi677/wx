/* pages/user/index.wxss */
.container{
  width:100%;
  height:100vh;
  background-color:#f2f2f2;
}
.user-info{
  height:24%;
  background-color:#fff;
  padding-top:64rpx;
}
.user-info .user-img{
  width:120rpx;
  height:120rpx;
  margin:0 auto;
}
.user-info .user-img image{
  width:120rpx;
  height:120rpx;
  border-radius:50%;
  box-shadow:0 0 20rpx rgba(0, 0, 0,0.2);
}
.user-info .user-name{
  display:inline-block;
  width:100%;
  margin:32rpx auto;
  text-align:center;
}
.user-pocket{
  display:flex;
  align-items:center;
  justify-content:space-between;
  height:80rpx;
  background-color:#fff;
  margin:64rpx 0;
  padding:0 24rpx; 
  line-height:80rpx;
  font-size:32rpx; 
}
.user-sign{
  position:absolute;
  bottom:48rpx;
  width:100%;
}
button{
  margin:0 24rpx; 
}

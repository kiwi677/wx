/* pages/wallet/index.wxss */
.container{
  width:100%;
  height:100vh;
  background-color:#f2f2f2;
}
.my-money{ 
  width:100%;
  padding:48rpx 0;
  display:flex;
  flex-direction:column;
  background-color:#fff;
}
.my-money text{
  display:inline-block;
  margin:0 auto;
  font-size:24rpx;
}
.my-money text:nth-child(2){
  height:180rpx;
  font-size:72rpx;
  font-weight:600;
  line-height:180rpx;
  color:forestgreen;
}
.my-money text:nth-child(3){
  height:48rpx;
  padding:0 24rpx;
  text-align:center;
  line-height:48rpx;
  border:1rpx solid #ccc;
  border-radius:50rpx;
}
button{
  margin:24rpx 48rpx;
  color:#000;
}
.my-ticket, .my-deposit, .about{
  height:144rpx;
  display:flex;
  justify-content:space-between;
  padding:0 24rpx;
  font-size:28rpx;
  line-height:144rpx;
  background-color:#fff;
}
.my-deposit{
  margin:2rpx 0 48rpx;
}
.my-deposit text text{
  color:forestgreen;
}

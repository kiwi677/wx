/* pages/warn/index.wxss */
.container{
  width:100%;
  background-color:#f2f2f2;
}
.title{
  background-color:#f2f2f2;
  padding:30rpx 0 30rpx 50rpx;
  font-size:28rpx;
}
.choose{
  background-color:#fff;
  font-size:28rpx;
}
.choose-gride{
    padding:24rpx;
    display:flex;
    flex-wrap:wrap;
    justify-content:space-around;
}
.gride{
  width:45%;
  height:72rpx;
  /* margin-top:12rpx; */
  padding:12rpx;
  /* border:1px solid #ccc; */
  /* text-align:center; */
  line-height:72rpx;
  /* border-radius:12rpx; */
}
.action .action-photo{
  background-color:#fff;
  margin:48rpx;
}
.action .action-photo image{
  position:relative;
  width:120rpx;
  height:120rpx;
  margin-right:42rpx;
  overflow:visible;
}
.action .action-photo image icon{
  position:absolute;
  top:-18rpx;
  left:100rpx;
}
.action .action-photo .add{
  display:inline-block;
  width:120rpx;
  height:120rpx;
  color:#ccc;
  border:1px dashed #ccc;
  font-size:24rpx;
  text-align:center;
  line-height:120rpx;
  vertical-align:top;
}
.action .action-input{
  margin:0 24rpx 24rpx 24rpx;
}
.action .action-input input{
  height:72rpx;
  margin:24rpx;
  padding-left:24rpx;
  background-color:#f2f2f2;
  border-radius:8rpx;
}
.action .action-submit button{
  margin:48rpx;
}
